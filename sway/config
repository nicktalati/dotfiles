set $mod Mod1
set $win Mod4

set $left h
set $down j
set $up k
set $right l

output * bg $HOME/wallpaper/ocean.png stretch

for_window [app_id=".*"] inhibit_idle fullscreen
for_window [class=".*"] inhibit_idle fullscreen

exec_always {
    swayidle -w \
        timeout 900 'swaylock -f' \
        timeout 930 'swaymsg "output * power off"' \
        resume 'swaymsg "output * power on"' \
        before-sleep 'swaylock -f'
}

bindsym $mod+Return exec kitty
bindsym $mod+b exec firefox
bindsym $mod+w exec firefox -P work
bindsym $mod+g exec google-chrome-stable --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+m exec thunderbird
bindsym $mod+z exec zathura

bindsym Print exec grim ~/Downloads/ss_$(date +%Y_%m_%d_%H_%M_%S).png && notify-send -r 999 -t 2000 -i folder-camera "Screenshot saved to Downloads"
bindsym Super_L exec grim -g "$(slurp)" ~/Downloads/ss-$(date +%Y_%m_%d_%H_%M_%S).png && notify-send -r 999 -t 2000 -i folder-camera "Screenshot saved to Downloads"

bindsym XF86AudioMute exec "volume_loop mute &"
bindsym XF86AudioLowerVolume exec "volume_loop down &"
bindsym --release XF86AudioLowerVolume exec "pkill -f 'volume_loop down'"
bindsym XF86AudioRaiseVolume exec "volume_loop up &"
bindsym --release XF86AudioRaiseVolume exec "pkill -f 'volume_loop up'"

bindsym XF86MonBrightnessDown exec "brightness_loop down &"
bindsym --release XF86MonBrightnessDown exec "pkill -f 'brightness_loop down'"
bindsym XF86MonBrightnessUp exec "brightness_loop up &"
bindsym --release XF86MonBrightnessUp exec "pkill -f 'brightness_loop up'"

bindsym XF86Launch1 exec "battery &"


bindsym $mod+q kill

